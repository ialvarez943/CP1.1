pipeline {
    agent any
    stages {
        stage('Get Code') {
            steps {
                git branch: 'develop', url: 'https://github.com/ialvarez943/CP1.1.git'
            }
        }
        stage('Build') {
            steps {
                echo 'Esto es Python, no hay que compilar nada!'
            }
        }
        stage('Tests') {
            parallel {
                stage('Unit') {
                    steps {
                        catchError(buildResult: 'UNSTABLE', stageResult: 'FAILURE') {
                            bat '''
                                SET PYTHONPATH=%WORKSPACE%
                                pytest --junitxml=result-unit.xml test\\unit
                            '''
                        }
                    }
                }
                stage('Service') {
                    steps {
                        bat '''
                            set FLASK_APP= app\\api.py
                            set FLASK_ENV=development
                            start flask run
                            java -jar D:\\Proyectos\\ESTUDIOS\\UNIR\\DEVOPS\\PRACTICAS\\wiremock\\wiremock-standalone-3.13.2.jar --port 9090 --root-dir %WORKSPACE%\\test\\wiremock
                            SET PYTHONPATH=%WORKSPACE%
                            pytest --junitxml=result-unit.xml test\\rest
                        '''
                    }
                }
            }
        }
        stage('Results') {
            steps {
                junit 'result*.xml'
            }
        }
    }
}